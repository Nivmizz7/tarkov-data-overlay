{
  "$id": "task-additions.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "additionalProperties": {
    "additionalProperties": true,
    "properties": {
      "disabled": {
        "description": "Mark task as disabled/removed from standard gameplay",
        "type": "boolean"
      },
      "experience": {
        "description": "Experience points rewarded on task completion",
        "minimum": 0,
        "type": "integer"
      },
      "finishRewards": {
        "description": "Rewards given on task completion",
        "properties": {
          "items": {
            "items": {
              "properties": {
                "count": {
                  "minimum": 1,
                  "type": "integer"
                },
                "item": {
                  "properties": {
                    "id": {
                      "type": "string"
                    },
                    "name": {
                      "type": "string"
                    },
                    "shortName": {
                      "type": "string"
                    }
                  },
                  "required": ["id", "name"],
                  "type": "object"
                }
              },
              "required": ["item", "count"],
              "type": "object"
            },
            "type": "array"
          },
          "traderStanding": {
            "items": {
              "properties": {
                "standing": {
                  "type": "number"
                },
                "trader": {
                  "properties": {
                    "id": {
                      "type": "string"
                    },
                    "name": {
                      "type": "string"
                    }
                  },
                  "required": ["name"],
                  "type": "object"
                }
              },
              "required": ["trader", "standing"],
              "type": "object"
            },
            "type": "array"
          }
        },
        "type": "object"
      },
      "id": {
        "description": "Unique identifier for the added task",
        "type": "string"
      },
      "kappaRequired": {
        "description": "Whether task is required for Kappa container",
        "type": "boolean"
      },
      "lightkeeperRequired": {
        "description": "Whether task is required for Lightkeeper access",
        "type": "boolean"
      },
      "map": {
        "anyOf": [
          {
            "additionalProperties": false,
            "properties": {
              "id": {
                "type": "string"
              },
              "name": {
                "type": "string"
              }
            },
            "required": ["id", "name"],
            "type": "object"
          },
          {
            "type": "null"
          }
        ],
        "description": "Primary map for the task"
      },
      "maps": {
        "description": "Maps where the task takes place",
        "items": {
          "additionalProperties": false,
          "properties": {
            "id": {
              "type": "string"
            },
            "name": {
              "type": "string"
            }
          },
          "required": ["id", "name"],
          "type": "object"
        },
        "type": "array"
      },
      "name": {
        "description": "Task name",
        "type": "string"
      },
      "objectives": {
        "description": "Task objectives",
        "items": {
          "additionalProperties": true,
          "properties": {
            "containsAll": {
              "items": {
                "additionalProperties": false,
                "properties": {
                  "id": {
                    "type": "string"
                  },
                  "name": {
                    "type": "string"
                  },
                  "shortName": {
                    "type": "string"
                  }
                },
                "required": ["id", "name"],
                "type": "object"
              },
              "type": "array"
            },
            "count": {
              "minimum": 1,
              "type": "integer"
            },
            "description": {
              "type": "string"
            },
            "foundInRaid": {
              "type": "boolean"
            },
            "id": {
              "type": "string"
            },
            "item": {
              "additionalProperties": false,
              "properties": {
                "id": {
                  "type": "string"
                },
                "name": {
                  "type": "string"
                },
                "shortName": {
                  "type": "string"
                }
              },
              "required": ["id", "name"],
              "type": "object"
            },
            "items": {
              "items": {
                "additionalProperties": false,
                "properties": {
                  "id": {
                    "type": "string"
                  },
                  "name": {
                    "type": "string"
                  },
                  "shortName": {
                    "type": "string"
                  }
                },
                "required": ["id", "name"],
                "type": "object"
              },
              "type": "array"
            },
            "maps": {
              "items": {
                "additionalProperties": false,
                "properties": {
                  "id": {
                    "type": "string"
                  },
                  "name": {
                    "type": "string"
                  }
                },
                "required": ["id", "name"],
                "type": "object"
              },
              "type": "array"
            },
            "markerItem": {
              "additionalProperties": false,
              "properties": {
                "id": {
                  "type": "string"
                },
                "name": {
                  "type": "string"
                },
                "shortName": {
                  "type": "string"
                }
              },
              "required": ["id", "name"],
              "type": "object"
            },
            "questItem": {
              "additionalProperties": false,
              "properties": {
                "id": {
                  "type": "string"
                },
                "name": {
                  "type": "string"
                },
                "shortName": {
                  "type": "string"
                }
              },
              "required": ["id", "name"],
              "type": "object"
            },
            "requiredKeys": {
              "items": {
                "items": {
                  "additionalProperties": false,
                  "properties": {
                    "id": {
                      "type": "string"
                    },
                    "name": {
                      "type": "string"
                    },
                    "shortName": {
                      "type": "string"
                    }
                  },
                  "required": ["id", "name"],
                  "type": "object"
                },
                "type": "array"
              },
              "type": "array"
            },
            "type": {
              "type": "string"
            },
            "useAny": {
              "items": {
                "additionalProperties": false,
                "properties": {
                  "id": {
                    "type": "string"
                  },
                  "name": {
                    "type": "string"
                  },
                  "shortName": {
                    "type": "string"
                  }
                },
                "required": ["id", "name"],
                "type": "object"
              },
              "type": "array"
            },
            "usingWeapon": {
              "items": {
                "additionalProperties": false,
                "properties": {
                  "id": {
                    "type": "string"
                  },
                  "name": {
                    "type": "string"
                  },
                  "shortName": {
                    "type": "string"
                  }
                },
                "required": ["id", "name"],
                "type": "object"
              },
              "type": "array"
            },
            "usingWeaponMods": {
              "items": {
                "items": {
                  "additionalProperties": false,
                  "properties": {
                    "id": {
                      "type": "string"
                    },
                    "name": {
                      "type": "string"
                    },
                    "shortName": {
                      "type": "string"
                    }
                  },
                  "required": ["id", "name"],
                  "type": "object"
                },
                "type": "array"
              },
              "type": "array"
            }
          },
          "required": ["id", "description"],
          "type": "object"
        },
        "type": "array"
      },
      "taskRequirements": {
        "description": "Task prerequisites/requirements",
        "items": {
          "additionalProperties": true,
          "properties": {
            "task": {
              "additionalProperties": false,
              "properties": {
                "id": {
                  "type": "string"
                },
                "name": {
                  "type": "string"
                }
              },
              "required": ["id", "name"],
              "type": "object"
            }
          },
          "required": ["task"],
          "type": "object"
        },
        "type": "array"
      },
      "trader": {
        "additionalProperties": false,
        "description": "Trader who gives the task",
        "properties": {
          "id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          }
        },
        "required": ["name"],
        "type": "object"
      },
      "wikiLink": {
        "description": "Quest wiki link",
        "type": "string"
      }
    },
    "required": ["id", "name", "wikiLink", "trader", "objectives"],
    "type": "object"
  },
  "description": "Schema for new tasks not available in tarkov.dev",
  "title": "Task Additions",
  "type": "object"
}
