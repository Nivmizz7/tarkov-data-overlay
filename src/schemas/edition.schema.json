{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "edition.schema.json",
  "title": "Game Edition",
  "description": "Schema for game edition data in tarkov-data-overlay",
  "type": "object",
  "additionalProperties": {
    "type": "object",
    "properties": {
      "id": {
        "type": "string",
        "description": "Unique identifier for the edition"
      },
      "value": {
        "type": "integer",
        "minimum": 1,
        "maximum": 10,
        "description": "Numeric ID used by TarkovTracker (1-6+)"
      },
      "title": {
        "type": "string",
        "description": "Display name of the edition"
      },
      "defaultStashLevel": {
        "type": "integer",
        "minimum": 1,
        "maximum": 5,
        "description": "Starting stash level (1-5)"
      },
      "defaultCultistCircleLevel": {
        "type": "integer",
        "minimum": 0,
        "maximum": 3,
        "description": "Starting Cultist Circle level (0-3)"
      },
      "traderRepBonus": {
        "type": "object",
        "description": "Starting reputation bonus per trader",
        "additionalProperties": {
          "type": "number"
        }
      }
    },
    "required": ["id", "value", "title", "defaultStashLevel", "defaultCultistCircleLevel", "traderRepBonus"],
    "additionalProperties": true
  }
}
